<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Cross Browser Testing" parallel="tests">
    <parameter name="URL" value="https://demoqa.com/automation-practice-form"/>

    <test name="Test On Chrome">
        <parameter name="BrowserType" value="Chrome"/>
        <classes>
            <class name="com.demoqa.DemoqaAutomationPracticeFPageTest"/>
        </classes>
    </test>

    <test name="Test On Edge">
        <parameter name="BrowserType" value="Edge"/>
        <classes>
            <class name="com.demoqa.DemoqaAutomationPracticeFPageTest"/>
        </classes>
    </test>

    <test name="Test On Firefox">
        <parameter name="BrowserType" value="Firefox"/>
        <classes>
            <class name="com.demoqa.DemoqaAutomationPracticeFPageTest"/>
        </classes>
    </test>

</suite>